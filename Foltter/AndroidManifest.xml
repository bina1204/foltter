<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gsbina.android.foltter"
    android:versionCode="1"
    android:versionName="0.2" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FoltterApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OAuthActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".FolderListActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity
            android:name=".UserFolderActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".AddFolderActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".DeleteFolderActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".FolderSettingsActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ConversationActivity"
            android:label="@string/app_name" />

        <service android:name=".UserService" />
    </application>

</manifest>